<script type="text/javascript">

function loadProductionTable() {
	var table = new Tabulator("#production-list-table", {
		width: '100%',
        initialSort:[
            {column:"id", dir:"desc"}, //sort by this first
        ],
		columns:[
	        {title:"ID", field:"id", width:100},
	        {title:"Name", field:"name", sorter:"string"},
	        {title:"Autor", field:"author_text", sorter:"string"},
	        {title:"Components", field:"components", sorter:"number", align:"right", width:100},
	        {title:"Created", field:"created", sorter:"date", align:"center"},
	        //{title:"status", field:"status", sorter:"string", align:"center"},
	    ],
	    rowClick:function(e, row){
	    	var event_id = row._row.cells[0].value
	    	stocktakingLoadEvent(event_id);
	    },
	    rowDblClick:function(e, row){
	    	var event_id = row._row.cells[0].value
	    	window.location.href = "/production/"+event_id+"/edit/";
	    },
	    ajaxURL:"/production/api/getProductionList",
	    ajaxConfig:{
	        method:"POST",
	        headers: {
	            "Content-type": 'application/json; charset=utf-8',
	        },
	    }
	});
}


loadProductionTable();

</script>


<script type="text/javascript">

function load_production_tree(){
    var production_tree = $('#production-list-tree').jstree({
        'core' : {
           'data' : {
              'type': "POST",
              'url' : "/production/api/getProductionTree/?jstree=True"
            },
  			"check_callback" : true
        },
        "plugins" : [
            //  "checkbox",
			//  "contextmenu",
			  "dnd",
			//  "massload",
			//  "search",
			  "sort",
			  "state",
			  "types",
        ],
        'checkbox':{
            'whole_node': false,
        },
		'dnd':{
		  'is_draggable': true,
		  'use_html5': true,
		}
		,"types" : {
	      "folder" : {
	        "icon" : "bi bi-inboxes"
	      },
	      "product" : {
	        "icon" : "bi bi-cpu"
	      }
	    },
    });


	production_tree.bind("move_node.jstree", function(e, data) {
   		console.log("Presouvam pozici " + data.node.id + " to " + data.parent);

	    $.ajax({
	      type: "POST",
	      url: "/production/api/productionTree/move/",
	      data: {'id': data.node.id, 'parent': data.parent},
	      //success: success,
	      //dataType: dataType
    	});
    });

	production_tree.on('changed.jstree', function (e, data) {
		if(data.event && data.event.type == 'click'){

			if(data.node.type == 'product'){
				// tady je kliknuti na produkt
				console.log("ON change", data);

				load_product_info(data.node.id);
			}

		}
	});


}
load_production_tree();


function load_product_info(id){

	console.log("Nacitam data o polozce", id);
	$("#product_info").show();
}

</script>

