<h2>Seznam objednávek <a class="btn btn-outline-primary" style="float: right;" href="./order/new"> Vytvořit novou objednávku</a>
</h2>
{{len(order_list)}}


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Identifikator</th>
      <th scope="col">Dodavatel</th>
      <th scope="col">Stav</th>
      <th scope="col">Cena</th>
      <th scope="col">Poznámky</th>
    </tr>
  </thead>
  <tbody>
{% for i, order in enumerate(order_list) %}
    <tr>
      <th scope="row">{{i}}</th>
      <td><a href="./order/{{order['_id']}}">{{order.get('order_identificator', '--identifikator--')}}</a></td>
      <td>{{order.get('order_supplier', '--dodavatel--')}}</td>
      <td>{{OrderStatusText[order.get('order_status', 0)] }}</td>
      <td>0 Czk</td>
      <td>{{order}}</td>
    </tr>
	
{% end %}
  </tbody>
</table>


<h2>Položky k objednání</h2>
{{len(wait_list)}}
{% for supplier_group in wait_list %}

	<h3 class="mx-3" data-toggle="collapse" href="#collapse_orders_{{supplier_group['_id']}}" data-bs-toggle="collapse"  role="button" aria-expanded="false" aria-controls="collapse_orders_{{supplier_group['_id']}}">
		Dodavatel: {{supplier_group['_id']}}
	</h3>

	<div class="card mx-4 collapse" id="collapse_orders_{{supplier_group['_id']}}"  >
		<div class="card-header">
			Otevřené objednávky: <span class="badge bg-sm bg-primary">3</span>
		</div>
		<div class="card-body d-flex justify-content-between">
			<span>
			<div>Objednávka 1</div>
			<div>Objednávka 2</div>
			<div>Objednávka 3</div>
			</span>	
			<span>
				<button class="btn btn-outline-success">Přidat do vybrané objednávky</button>
			</span>
		</div>
	</div>

	<table class="table table-striped table-hover">
	<thead>
		<tr>
		<td>#</td>
		<td>Nazev</td>
		<td>Dodavatel symbol</td>
		<td>Počet ks</td>
		<td>Př.cena/ks</td>
		<td>Objednávka</td>
		</tr>
	</thead>

	{%for i, order_row in enumerate(supplier_group['order_rows'])%}
		<tr class="{{order_row['_id']}}" onclick="open_orderrow_info('{{order_row['_id']}}')">
		<td>{{i}} <input type="checkbox" name="{{order_row['_id']}}"></td>
		<td><i class="bi bi-cpu"></i> {{order_row['component_info'][0]['name']}}</td>
		<td>{% if order_row['supplier'] %} {{order_row['supplier_symbol']}} {%else%} Nepřiřazeno {%end%}</td>
		<td>{{order_row['count']}}</td>
		<td>{{order_row['predicted_unit_price']}}</td>
		<td>{{order_row.get('order_info', "None")}}</td>
		</tr>
	{%end%}
	</table>

	
{%end%}