<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OpenIntranet Registrace</title>
    <link rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css">

    <style media="screen">
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -ms-flex-align: center;
            -ms-flex-pack: center;
            -webkit-box-align: center;
            align-items: center;
            -webkit-box-pack: center;
            justify-content: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

        .form-signin .form-control:focus {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: -1px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }


    </style>
</head>
<body class="text-center" data-gr-c-s-loaded="true">

<form class="form-signin" action="/registration" method="post">
    {% module xsrf_form_html() %}
    <img class="mb-4" src="https://www.ust.cz/include/Logo_UST.png">
    <h1 class="h3 mb-3 font-weight-normal">Registrace</h1>
    {%if msg %}
    <div class="alert alert-danger" role="alert">{%raw msg %}</div>
    {%end%}

    <input type="hidden" name="token" id="registration-token" value="{{token or ''}}">

    {% if token %}
    <input type="hidden" name="email" value="">
    <input type="hidden" name="user_id" value="{{user_id}}">

    {% else %}
    <label for="registration-email-input" class="sr-only">Email</label>
    <input type="text" id="registration-email-input" name="email" class="form-control" placeholder="Email"
           required autofocus>
    <label for="registration-identifier" class="sr-only">Přezdívka</label>
    <input type="text" id="registration-identifier" name="user_id" class="form-control" placeholder="Přezdívka"
           required>
    {% end %}

    <label for="registration-password-input" class="sr-only">Heslo</label>
    <input type="password" id="registration-password-input" name="password" class="form-control" placeholder="Heslo"
           required>
    <label for="registration-pass-check-input" class="sr-only">Ověření hesla</label>
    <input type="password" id="registration-pass-check-input" name="password_check" class="form-control"
           placeholder="Ověření hesla" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="agree" name="agree" required> Souhlasím ...
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Zaregistrovat se</button>
    <p class="mt-3 mb-3 text-muted">Open Intranet &copy; 2017-2020</p>
</form>


</body>
</html>
